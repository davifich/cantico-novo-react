{
  "extends": "expo/tsconfig.base",

  "compilerOptions": {
    "baseUrl": ".",

    "paths": {
      "@/*": ["./*"]
    },

    "strict": true,
    "allowJs": true,

    "skipLibCheck": true,

    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/**/*.d.ts"
  ]
}
